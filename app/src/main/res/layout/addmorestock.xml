<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color61">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Please add quantity to the stocks. Valid amount is 1-50."
            android:textColor="@color/color71"
            android:textSize="20sp"
            android:textAlignment="center"
            android:typeface="sans" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color71">

        </View>

        <EditText
            android:id="@+id/et_stock_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Stock"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/color71"
            android:backgroundTint="@color/color71"
            android:textAlignment="center"
            android:paddingBottom="16dp"
            android:textSize="34sp"
            android:layout_marginBottom="20dp"
            android:typeface="sans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color71">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_addstock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="Done"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_cancel_addstock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancel"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>

