<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_rounded"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context="com.evillari.sip.MainActivity">




    <TextView
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/layout_rounded"
        android:padding="20dp"
        android:text="Solar-Ice Program"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />





    <RelativeLayout

        android:id="@+id/counter_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_line"
        android:layout_marginBottom="20dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/sales_hit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="@color/color30"
            android:layout_marginLeft="20dp"
            android:text="Sales: P1000" />

        <TextView
            android:id="@+id/total_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:textColor="@color/color40"
            android:text="Inventory: 1000"/>


    </RelativeLayout>


    <EditText
        android:id="@+id/input_q"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_below="@id/counter_panel"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/q_field"
        android:padding="20dp"
        android:text="12"
        android:inputType="number"
        android:textColor="?android:attr/editTextColor"

        android:textSize="60sp" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_q"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/button_rs"
        android:padding="20dp"
        android:shadowColor="@color/colorAccent"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/minus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/counter_panel"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/input_q"
        android:background="@drawable/pm_button"
        android:text="-"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textSize="60sp">
    </Button>

    <Button
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/counter_panel"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/input_q"
        android:background="@drawable/pm_button"
        android:text="+"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textSize="60sp">

    </Button>

    <Button
        android:id="@+id/inventory_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@drawable/button_rs"
        android:padding="20dp"
        android:shadowColor="@color/colorAccent"
        android:text="Add more cool ICES" />


</RelativeLayout>
